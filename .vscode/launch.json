    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "file://${workspaceFolder}/INDEX.HTML",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Open with Live Server",
            "type": "chrome",
            "request": "launch",
            "url": "http://127.0.0.1:5500/INDEX.HTML",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch with Python Server",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000/INDEX.HTML",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Start Python Server"
        }
    ]
}