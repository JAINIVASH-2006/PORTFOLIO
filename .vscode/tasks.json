{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Live Server",
            "type": "shell",
            "command": "npx",
            "args": [
                "live-server",
                "--port=5500",
                "--entry-file=INDEX.HTML"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Start Python Server",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "http.server",
                "8000"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Open in Browser",
            "type": "shell",
            "command": "start",
            "args": [
                "chrome",
                "file://${workspaceFolder}/INDEX.HTML"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "never"
            },
            "problemMatcher": []
        }
    ]
}